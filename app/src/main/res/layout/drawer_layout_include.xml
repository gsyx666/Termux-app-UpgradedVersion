<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/termux_layout_1"
    android:layout_width="match_parent"
    android:background="#2b2b2b"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_above="@+id/function_ll"
            android:id="@+id/sv_hhh"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#552b2b2b"
                    android:layout_height="wrap_content">



                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:paddingTop="5dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/color_553E3E3E"
                        app:cardCornerRadius="3dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:layout_height="wrap_content">

                            <main.java.com.termux.utils.CustomTextView
                                android:id="@+id/service_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="@string/公告552"
                                android:textColor="#33CCFF"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">


                                <main.java.com.termux.utils.CustomTextView
                                    android:id="@+id/visition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="@string/本地版本552"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">




                                    <main.java.com.termux.utils.CustomTextView
                                        android:id="@+id/visition1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="2dp"
                                        android:text="@string/云端版本552"
                                        android:textColor="#fff"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />






                                </RelativeLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">

                                <main.java.com.termux.utils.CustomTextView
                                    android:id="@+id/text_jiagou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="@string/架构"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <main.java.com.termux.utils.CustomTextView
                                    android:id="@+id/text_ip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="@string/IP"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <main.java.com.termux.utils.CustomTextView
                                    android:id="@+id/text_system"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="2dp"
                                    android:text="@string/系统作者"
                                    android:visibility="visible"
                                    android:singleLine="true"
                                    android:ellipsize="marquee"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:textColor="#fff"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>




                        </LinearLayout>



                    </androidx.cardview.widget.CardView>







                </RelativeLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:paddingTop="5dp"
                       android:layout_marginTop="20dp"
                       android:paddingBottom="5dp"
                       android:layout_marginRight="5dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/color_553E3E3E"
                       app:cardCornerRadius="3dp"
                       android:layout_height="wrap_content">



                       <main.java.com.termux.utils.CustomTextView
                           android:id="@+id/check_up"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:layout_marginLeft="10dp"
                           android:layout_marginRight="10dp"
                           android:layout_marginBottom="5dp"
                           android:padding="2dp"
                           android:paddingLeft="10dp"
                           android:textStyle="bold"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"
                           android:text="@string/更新885"
                           android:layout_alignParentRight="true"
                           android:textColor="@color/color_FFFFFF"
                           android:textSize="12sp" />



                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:paddingTop="5dp"
                       android:layout_marginTop="20dp"
                       android:paddingBottom="5dp"
                       android:layout_marginRight="5dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/color_553E3E3E"
                       app:cardCornerRadius="3dp"
                       android:layout_height="wrap_content">



                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:orientation="horizontal"
                           android:gravity="center"
                           android:id="@+id/fuwuqi_ll"
                           android:layout_height="wrap_content">


                           <ImageView
                               android:layout_width="20dp"
                               android:src="@drawable/tupian_555"
                               android:layout_marginLeft="5dp"
                               android:id="@+id/fuwuqi_ut"
                               android:layout_height="20dp"/>

                           <main.java.com.termux.utils.CustomTextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="5dp"
                               android:layout_marginLeft="5dp"
                               android:layout_marginRight="10dp"
                               android:layout_marginBottom="5dp"
                               android:padding="2dp"
                               android:paddingLeft="10dp"
                               android:textStyle="bold"
                               android:paddingTop="10dp"
                               android:paddingBottom="10dp"
                               android:text="@string/UTphp服务器"
                               android:layout_alignParentRight="true"
                               android:textColor="@color/color_FFFFFF"
                               android:textSize="12sp" />



                       </LinearLayout>



                   </androidx.cardview.widget.CardView>






               </LinearLayout>

                <include layout="@layout/drawer_layout_include_ut_server" android:id="@+id/ut_server" android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_marginLeft="5dp"
                       android:paddingTop="5dp"
                       android:layout_marginTop="20dp"
                       android:paddingBottom="5dp"
                       android:layout_marginRight="5dp"
                       app:cardElevation="0dp"
                       app:cardBackgroundColor="@color/color_553E3E3E"
                       app:cardCornerRadius="3dp"
                       android:layout_height="wrap_content">


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:orientation="vertical"
                           android:layout_height="wrap_content">


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:padding="8dp"
                               android:gravity="center_vertical"
                               android:orientation="horizontal">

                               <ImageView
                                   android:layout_width="25dp"
                                   android:layout_height="25dp"
                                   android:src="@drawable/quanxian" />

                               <main.java.com.termux.utils.CustomTextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_weight="1"
                                   android:layout_marginLeft="10dp"
                                   android:text="@string/权限信息886"
                                   android:textColor="#fff"
                                   android:textSize="13sp"
                                   android:textStyle="bold" />

                           </LinearLayout>


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:orientation="horizontal"
                               android:layout_marginBottom="10dp"
                               android:layout_height="wrap_content">

                               <main.java.com.termux.utils.CustomTextView
                                   android:id="@+id/quanxian_123"
                                   android:layout_marginLeft="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_width="0dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_weight="1"
                                   android:layout_height="wrap_content"
                                   android:padding="2dp"
                                   android:text="@string/内存权限886"
                                   android:textColor="#fff"
                                   android:textSize="10sp"
                                   android:textStyle="bold" />

                               <main.java.com.termux.utils.CustomTextView
                                   android:id="@+id/dianhua_123"
                                   android:layout_marginLeft="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_width="0dp"
                                   android:layout_weight="1"
                                   android:layout_marginBottom="10dp"
                                   android:layout_height="wrap_content"
                                   android:padding="2dp"
                                   android:text="@string/电话权限886"
                                   android:textColor="#fff"
                                   android:textSize="10sp"
                                   android:textStyle="bold" />



                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:orientation="horizontal"
                               android:layout_marginBottom="10dp"
                               android:layout_height="wrap_content">

                               <main.java.com.termux.utils.CustomTextView
                                   android:id="@+id/duanxin_123"
                                   android:layout_marginLeft="10dp"
                                   android:layout_width="0dp"
                                   android:layout_marginBottom="10dp"
                                   android:layout_weight="1"
                                   android:layout_height="wrap_content"
                                   android:padding="2dp"
                                   android:text="@string/短信权限"
                                   android:textColor="#fff"
                                   android:textSize="10sp"
                                   android:textStyle="bold" />


                           </LinearLayout>


                       </LinearLayout>

                   </androidx.cardview.widget.CardView>



                </RelativeLayout>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/color_553E3E3E"
                    app:cardCornerRadius="5dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="visible"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="15dp"
                            android:visibility="invisible"
                            android:src="@drawable/jinggao_xiao"
                            android:layout_height="15dp"/>


                        <main.java.com.termux.utils.CustomTextView
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:padding="2dp"

                            android:text="@string/界面选择kjsdhf"
                            android:textColor="#fff"
                            android:textSize="10sp"
                            android:textStyle="bold" />




                        <main.java.com.termux.utils.CustomTextView
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:id="@+id/jingjian_mod"
                            android:background="@drawable/shape_login_btn_true"
                            android:text="@string/精简模式sdfsd"
                            android:textColor="#10202f"
                            android:textSize="10sp"
                            android:textStyle="bold" />



                        <main.java.com.termux.utils.CustomTextView
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/gaoji_mod"
                            android:padding="2dp"
                            android:text="@string/高级模式dfgdf"
                            android:textColor="#fff"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <include layout="@layout/drawer_layout_left_fuza"
                    android:visibility="gone"
                    android:id="@+id/fuza_layout"/>

                <include layout="@layout/drawer_layout_left_jiandan"
                    android:visibility="visible"
                    android:id="@+id/jiandan_layout"/>







            </LinearLayout>
        </ScrollView>


        <ListView
            android:id="@+id/left_drawer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:background="@color/color_552B2B2B"
            android:choiceMode="singleChoice"
            android:layout_above="@+id/function_ll"
            android:longClickable="true"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/function_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#112b2b2b"
            android:orientation="horizontal"
            android:padding="8dp">



            <Button
                android:id="@+id/fun_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/功能885"
                android:textColor="#fff" />

            <Button
                android:id="@+id/sess_btn"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/会话885"
                android:textColor="#fff" />

        </LinearLayout>

    </RelativeLayout>









</LinearLayout>
